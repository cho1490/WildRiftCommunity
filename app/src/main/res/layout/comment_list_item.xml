<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    android:background="@drawable/textbox_style_round2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commentListItemProfileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/commentListItemNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/commentListItemProfileImage"
            app:layout_constraintTop_toTopOf="@id/commentListItemProfileImage"/>

        <TextView
            android:id="@+id/commentListItemComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:textSize="11dp"
            android:background="@drawable/textbox_style_round"
            app:layout_constraintStart_toEndOf="@id/commentListItemProfileImage"
            app:layout_constraintTop_toBottomOf="@id/commentListItemNickname"/>

        <TextView
            android:id="@+id/commentListItemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/commentListItemProfileImage"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>